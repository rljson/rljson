{
  "name": "@rljson/rljson",
  "version": "0.0.61",
  "packageManager": "pnpm@10.11.0",
  "description": "The RLJSON data format specification",
  "homepage": "https://github.com/rljson/rljson",
  "bugs": "https://github.com/rljson/rljson/issues",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rljson/rljson.git"
  },
  "main": "dist/rljson.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "npx vite build && tsc && cp README* dist && mkdir dist/src && cp src/example.ts dist/src",
    "test": "npx vitest run --coverage && npm run lint",
    "prebuild": "npm run test",
    "prepublishOnly": "npm run build && npm run test",
    "lint": "npx eslint",
    "updateGoldens": "cross-env UPDATE_GOLDENS=true npm test"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-jsdoc": "^60.7.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.4.0",
    "jsdoc": "^4.0.4",
    "read-pkg": "^9.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.8",
    "vite-node": "^3.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-dom": "^0.1.1"
  },
  "dependencies": {
    "@rljson/hash": "^0.0.16",
    "@rljson/json": "^0.0.22",
    "nanoid": "^5.1.6"
